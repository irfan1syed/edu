html
  head
    title Write a Review
    link(rel="stylesheet", href="/stylesheets/style.css")

  body
    section
      h2 Share Your Review
      form
        label(for="reviewerName") Your Name:
        input(type="text", name="reviewerName", id="reviewerName", required)

        label(for="reviewContent") Review:
        textarea(name="reviewContent", id="reviewContent", rows="4", required)

        input(type="submit", value="Submit Review")

